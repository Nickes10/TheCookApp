<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instructions_item_container"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/step_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1"
        android:textColor="@color/colorDarkGrey"
        android:textSize="14sp" />

    <!-- EditText for description -->
    <EditText
        android:id="@+id/step_edit_text_description"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_below="@id/step_text"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/moving_button_step"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edit_text_background"
        android:hint="Write your step of recipe here"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- ImageView -->
    <ImageView
        android:id="@+id/moving_button_step"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/step_text"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:padding="6dp"
        android:contentDescription="Add image"
        android:src="@drawable/instagram_style_icon" />

    <ImageView
        android:id="@+id/delete_button_step"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/delete"
        android:gravity="center"
        android:clickable="true"
        android:contentDescription="Remove ingredient"
        android:visibility="gone" />
</RelativeLayout>